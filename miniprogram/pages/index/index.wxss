/**index.wxss**/
.page-tabbar .tabbar-main {
  color: #fff;
  background: blue;
}


.page-tabbar .tabbar-foot {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: red;
}

.page-tabbar .tabbar-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 6px 0;
}

.page-tabbar .tabbar-item .tabbar-icon {
  width: 20px;
  height: 20px;
  background: #fff;
}

.page-tabbar .tabbar-item .tabbar-text {
  margin-top: 6px;
  font-size: 12px;
}
